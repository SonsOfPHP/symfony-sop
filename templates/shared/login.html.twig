{% extends 'layout.html.twig' %}

{% block title %}{{ 'login'|trans }}{% endblock %}

{% block content %}
  {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  <form action="{{ path('shared_login') }}" method="post">
    <div class="mb-3">
      <label for="username" class="form-label">{{ 'label.email'|trans }}</label>
      <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">{{ 'label.password'|trans }}</label>
      <input type="password" id="password" name="_password" class="form-control" required>
    </div>

    {# If you want to control the URL the user is redirected to on success
    <input type="hidden" name="_target_path" value="/account"> #}

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <button type="submit" class="btn btn-primary">{{ 'btn.login'|trans }}</button>
    <a href="{{ path('shared_register') }}" class="btn btn-secondary ms-3">{{ 'btn.register'|trans }}</a>
  </form>
{% endblock %}
